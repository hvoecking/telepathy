FROM abiosoft/caddy:1.0.0 as caddy

FROM ubuntu:18.04 AS dist
ENV WD=/app
WORKDIR $WD
ENV \
  CADDYPATH=/data/caddy \
  PATH="$WD/bin:$PATH"
RUN : \
  && apt-get -qqy update \
  && apt-get -qqy --no-install-recommends install \
    ca-certificates \
    curl \
  && apt-get autoremove -y \
;
COPY README.md /app/telepathy.app/index.html
COPY LICENSE.md /app/telepathy.app/license
COPY --from=caddy /usr/bin/caddy /usr/local/bin/
COPY gcp/bin/ bin/
CMD start
