set -euo pipefail

NAME=gcloud-config

is_running() {
  docker inspect -f '{{.State.Running}}' "$NAME"
}

if ! docker inspect "$NAME" 2>&1 >/dev/null
then
  docker run \
    -it \
    --name "$NAME" \
    google/cloud-sdk:alpine \
  ;
fi

if [[ $(is_running) != true ]]
then
  docker start "$NAME"
fi

docker exec \
  -it \
  "$NAME" \
  gcloud --project=telepathy $@ \
;
