set -euo pipefail

caddy_configure() {
  mkdir -p "$CADDYPATH"

  cat << EOF > "$CADDYPATH/Caddyfile"
EOF
}

caddy_daemon() {
  echo "starting caddy..."
  /usr/local/bin/caddy \
    -log stdout \
    -agree=true \
    -conf="$CADDYPATH/Caddyfile" \
    -root=/var/tmp \
  ;
}

main() {
  caddy_configure
  caddy_daemon
}

main
