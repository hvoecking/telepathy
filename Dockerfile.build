FROM node:12-stretch AS build
ENV WD=/app
WORKDIR $WD
COPY LICENSE.md /app/build/license
COPY README.md /app/build/index.html
ARG VERSION=UNSET
ENV VERSION=$VERSION
RUN : \
  && sed -i "s/<\!-- %%VERSION%% -->/$VERSION/" build/index.html \
  && echo $VERSION > build/VERSION.md \
;
