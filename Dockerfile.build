FROM node:12-stretch AS build
ENV WD=/app
WORKDIR $WD
COPY exchange-files-in-browser frontend
RUN : \
  && cd frontend \
  && npm i \
  && npm cache clean --force \
  && npm run bundle \
  && cp -r public /app/build \
;
ARG VERSION=UNSET
ENV VERSION=$VERSION
RUN : \
  && sed -i "s/<\!-- %%VERSION%% -->/$VERSION/" build/index.html \
  && echo $VERSION > build/VERSION.md \
;
